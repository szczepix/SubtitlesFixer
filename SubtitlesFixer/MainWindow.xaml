<Window x:Class="SubtitlesFixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubtitlesFixer"
        mc:Ignorable="d"
        Title="Subtitles Fixer" Height="500" Width="800">
    <Grid>
        <RichTextBox x:Name="rtbSubtitles" Margin="0,0,0,35" VerticalAlignment="Stretch"
                     VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch">
            <FlowDocument>
                <Paragraph>
                    <Run Text="WKLEJ TUTAJ NAPISY" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Napraw polskie znaki" HorizontalAlignment="Stretch"
                RenderTransformOrigin="0.433,-0.236" Click="Button_Click" Height="35" VerticalAlignment="Bottom" />
    </Grid>
</Window>